<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vibe.api.repository.ProductMapper">

    <!-- 상품 목록 조회 -->
    <select id="selectProductList" resultType="vibe.api.entity.Product">
        SELECT /* ProductMapper.selectProductList */
               PRODUCT_NO
             , PRODUCT_NAME
             , PRICE
             , CREATED_AT
             , UPDATED_AT
          FROM PRODUCT
         ORDER BY CREATED_AT DESC
    </select>

    <!-- 상품 단건 조회 -->
    <select id="selectProductByProductNo" parameterType="string" resultType="vibe.api.entity.Product">
        SELECT /* ProductMapper.selectProductByProductNo */
               PRODUCT_NO
             , PRODUCT_NAME
             , PRICE
             , CREATED_AT
             , UPDATED_AT
          FROM PRODUCT
         WHERE PRODUCT_NO = #{productNo}
    </select>

    <!-- 상품명 중복 확인 -->
    <select id="countByProductName" parameterType="string" resultType="int">
        SELECT /* ProductMapper.countByProductName */
               COUNT(*)
          FROM PRODUCT
         WHERE PRODUCT_NAME = #{productName}
    </select>

    <!-- 상품번호 채번 -->
    <select id="selectNextProductNo" resultType="string">
        SELECT /* ProductMapper.selectNextProductNo */
               'P' || LPAD(NEXTVAL('SEQ_PRODUCT_NO')::TEXT, 6, '0')
    </select>

</mapper>
